<TreeViewItem x:Class="Orm.Toolkit.CheckTreeViewItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        SnapsToDevicePixels="True">
    <TreeViewItem.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="AeroTheme" StartPoint="0,0" EndPoint="0,1" Opacity="0.6">
                <GradientStop Color="Transparent" Offset="0"/>
                <GradientStop Color="AliceBlue" Offset="0.1"/>
                <GradientStop Color="LightBlue" Offset="0.5"/>
                <GradientStop Color="AliceBlue" Offset="0.9995"/>
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </TreeViewItem.Resources>
</TreeViewItem>
